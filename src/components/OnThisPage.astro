---
import { Icon } from "astro-icon/components";

const { headings } = Astro.props;
const { pathname } = Astro.url;
const heads = headings.slice(1) ?? [];
---

<aside class="aside pl-8 pt-5">
  <h4 class="font-bold text-small pb-2">On this page</h4>
  <ul class="border-l border-(--border-color) flex flex-col gap-2">
    {
      heads.map(
        ({
          depth,
          slug,
          text,
        }: {
          depth: number;
          slug: string;
          text: string;
        }) => (
          <li class:list={[depth !== 2 ? "ml-3" : ""]}>
            <a href={`#${slug}`} class="block pl-3 hover:text-primary">
              {text}
            </a>
          </li>
        ),
      )
    }
  </ul>
  <ul class="mt-5">
    <li>
      <a
        href={`https://github.com/HeJimenez00/AstraUI/tree/main/src/content${pathname}.mdx`}
        target="_blank"
        class="flex items-center gap-2"
      >
        <Icon name="edit" class="text-primary" />
        <span class="text-primary">Edit this page</span>
      </a>
    </li>
  </ul>
</aside>
