---
import { Icon } from "astro-icon/components";

const { pathname } = Astro.url;
const separate = pathname.split("/");
---

<p class="flex items-center gap-2 capitalize mb-2">
  <span class="text-g-500">{separate[separate.length - 2]}</span>
  <span> <Icon name="arrowRight" class="text-y-400" /> </span>
  <span class="text-y-400">{separate[separate.length - 1]}</span>
</p>
