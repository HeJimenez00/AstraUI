---
import LayoutMain from "@layouts/LayoutMain.astro";
import { Experience } from "@components/experience/Experience";
---

<LayoutMain
  title="Butter"
  description="Catalog of UI components as smooth as butter: soft, fluid, and designed for developers."
>
  <div
    class="radial-gradient light:bg-[radial-gradient(ellipse_at_center,_transparent_60%,_var(--color-g-50)_90%)] dark:bg-[radial-gradient(ellipse_at_center,_transparent_60%,_var(--color-g-1000)_90%)]"
  >
  </div>

  <div
    class="radial-gradient blur light:mask-[radial-gradient(ellipse_at_center,_transparent_40%,_var(--color-g-50)_100%)] dark:mask-[radial-gradient(ellipse_at_center,_transparent_40%,_var(--color-g-1000)_100%)] backdrop-blur-[10px]"
  >
  </div>

  <div class="experience">
    <Experience client:load />
  </div>
</LayoutMain>

<style>
  .experience {
    width: 100%;
    height: 100vh;
  }
  .radial-gradient {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1;
    background-image: radial-gradient(
      ellipse at center,
      transparent 60%,
      var(--color-g-50) 90%
    );
    pointer-events: none;
    user-select: none;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .radial-gradient.blur {
    mask-image: radial-gradient(
      ellipse at center,
      transparent 40%,
      var(--color-g-50) 100%
    );
    backdrop-filter: blur(10px);
  }
  @media (prefers-color-scheme: dark) {
    .radial-gradient {
      background-image: radial-gradient(
        ellipse at center,
        transparent 60%,
        var(--color-g-1000) 90%
      );
    }

    .radial-gradient.blur {
      mask-image: radial-gradient(
        ellipse at center,
        transparent 40%,
        var(--color-g-1000) 100%
      );
    }
  }
</style>
